        if !place_meeting(x,y-1,obWall) //if there isn't an obWall colliding from above
        {
            y += sign(vspd); //y = y+sign(vspd)
        }
        else
        {
            vspd = 0;
        }
    }
    else //if moving down
    {
        if !place_meeting(x,y+1,obWall) //&amp;&amp; (!place_meeting(x,y+1,obj_jumpthru) or place_meeting(x,y,obj_jumpthru))
        {
            y += sign(vspd); //y = y + sign(vspd)
        }
    }
}
hspd = (keyboard_check(vk_right)-keyboard_check(vk_left))*4; // a nice little trick that will set our hspd to +4 or -4 depending what button we are holding
repeat(abs(hspd)) // same as the vspd, we want to check for a collision at every pixel we move
{
    if !place_meeting(x+sign(hspd),y,obWall) // if there is no block to our left or right
    {
        x += sign(hspd); // add to our x value depending on which way we are going
    }
}

